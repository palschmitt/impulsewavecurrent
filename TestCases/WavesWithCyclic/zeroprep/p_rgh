FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      p_rgh;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [1 -1 -2 0 0 0 0];

internalField   uniform 0;

boundaryField
{
    back
        {
        type    empty;
        }
    front
        {
        type empty;
        }

    walls
    {
        type            fixedFluxPressure;
        phi             phiAbs;
        value           uniform 0;
    }

    inlet
    {
        type            cyclic;
    }
    outlet
    {
        type            cyclic;
    }

    atmosphere
    {
        type            totalPressure;
        p0              uniform 0;
    }
}

// ************************************************************************* //
