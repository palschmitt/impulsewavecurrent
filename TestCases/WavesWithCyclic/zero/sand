FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      sand;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 -1 0 0 0 0];

internalField   uniform 0;

boundaryField
{
    back
        {
        type    empty;
        }
    front
        {
        type empty;
        }
    walls
    {
        type            zeroGradient;
    }

    inlet
    {
        type            cyclic;
    }
    
    outlet
    {
        type            cyclic;
    }

    atmosphere
    {
        type            inletOutlet;
        inletValue      uniform 0;
        value           uniform 0;
    }
}

