FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      setFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

defaultFieldValues
(
    volScalarFieldValue alpha.water 0
    volVectorFieldValue U (0 0 0)
);

regions
(
    boxToCell
    {
        box (2 -999 -999) (2.1 999 0.3);
        fieldValues
        (
            volScalarFieldValue relax 1
        );
    }
    boxToCell
    {
        box (-999. -999. -999.) (999. 999. 0.25);
        fieldValues
        (
            volScalarFieldValue alpha.water 1
        );
    }
 );


